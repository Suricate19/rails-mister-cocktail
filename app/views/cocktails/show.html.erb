
<div class="cocktail-banner">
  <h1><%= @cocktail.name %></h1>
</div>

<% @cocktail.doses.each do |dose| %>
  <td><%= dose.ingredient.name %> - <%= dose.description %></td>

  <td> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?"} do %>
    <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  </td>
<% end %><br><br>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient, input_html: { class: "beautiful-dropdown"} %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to index', cocktails_path %><br>
