<div class="home-banner">
  <h1>Mister Tom Cocktail Cruise</h1>
  <p>
  <span id="banner-typed-text"></span>
  </p>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
    <h2>All Cocktails List</h2>
     <ul>
      <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
      <% end %>
     </ul>
      <br>
      <%= link_to 'Create your own', new_cocktail_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>



